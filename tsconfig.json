{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist"
    },
    "lib": [
        "es2015"
    ],
    "typedocOptions": {
        "entryPoints": [
            "index.ts",
            "./src"
        ],
        "includes": [
            "./src"
        ],
        "entryPointStrategy": "expand",
        "out": "docs"
    }
}